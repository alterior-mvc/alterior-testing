{
  "name": "@alterior/testing",
  "version": "0.0.2",
  "description": "A testing framework to complement Alterior",
  "main": "index.js",
  "repository": {
    "url": "https://github.com/alterior-mvc/alterior-testing.git"
  },
  "typings": "./index.d.ts",
  "scripts": {
    "test": "tsc && node ./node_modules/mocha/bin/mocha test/sample.js",

  "author": "William Lahti <wilahti@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@alterior/core": "0.0.7",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "mocha": "^3.0.2",
    "supertest": "^2.0.0"
  }
}
